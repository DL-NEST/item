{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": [
        "./*"
      ],
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "*.ts", ".*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
